<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CaseDetailActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/casedetailpic"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/lblcvictimname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casedetailpic"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="50dp"
        android:text="Victim name" />


    <TextView
        android:id="@+id/cvictimdetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/casedetailpic"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="27dp"
        android:hint="Name " />

    <TextView
        android:id="@+id/lblcasetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblcvictimname"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="27dp"
        android:text="Case Type" />

    <TextView
        android:id="@+id/detailcasetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvictimdetailName"
        android:layout_marginStart="-72dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/casedetailpic"
        android:hint="Type"
        android:layout_marginLeft="-72dp"
        android:layout_toRightOf="@+id/casedetailpic" />

    <TextView
        android:id="@+id/lblcasedesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/detailcasetype"
        android:text="Description" />

    <TextView
        android:id="@+id/detailcaDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailcasetype"
        android:layout_marginStart="-71dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/casedetailpic"
        android:hint="Case Description"
        android:layout_toRightOf="@+id/casedetailpic" />

    <TextView
        android:id="@+id/lblcalocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/detailcaDescription"
        android:text="Location" />

    <TextView
        android:id="@+id/detailcaLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailcaDescription"
        android:layout_marginStart="-71dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/casedetailpic"
        android:hint="Victim Location"
        android:layout_toRightOf="@+id/casedetailpic" />




</RelativeLayout>
